### Create area for company
POST {{BASE_URL}}/api/v1/areas

{
    "name": "Петрозаводск"
}

> {%
    client.test("Status code is 201", function () {
        client.assert(response.status === 201, "Response status is not 201");
    });
    client.global.set("areaId", response.body.id);
%}

### Check that area was created
GET {{BASE_URL}}/api/v1/areas/{{areaId}}

> {%
    client.test("Status code is 200", function () {
        client.assert(response.status === 200, "Response status is not 200");
    });
%}

### Get all companies
GET {{BASE_URL}}/api/v1/areas/{{areaId}}/companies

> {%
    client.test("Status code is 200", function () {
        client.assert(response.status === 200, "Response status is not 200");
    });
    client.test("Response body is a list", function () {
        client.assert(response.body instanceof Array, "Response body is not a list");
    });
%}

