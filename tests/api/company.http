### Update company

PATCH {{BASE_URL}}/api/v1/areas/{{areaId}}/companies/{{companyId}}

{
"name": "Тинькофф"
}

> {%
    client.test("Status code is 200", function () {
        client.assert(response.status === 200, "Response status is not 200");
    });
    client.test("Company name is updated", function () {
        client.assert(response.body.name === "Тинькофф", "Company name is not updated");
    });
%}

